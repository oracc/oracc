sub
import_catd {
    my $cat = shift;
    my $fields = $$cat[0];
    my $id_index = -1;
    my %field_indexes = ();
    my $first_record = 1;

    if ($catd_debug) {
	print CATDUMP Dumper \$cat;
	print CATDUMP "++++++++\n";
    }

    for (my $i = 0; $i <= $#$fields; ++$i) {
	$id_index = $i and last 
	    if $$fields[$i] =~ /^id_(?:text|composite)$/;
    }

    if ($first_record) {
	foreach my $f (keys %catd_fields) {
	    # register the key indexes, creating new ones at the end of the row if necessary as in import routine
	    my $fn_index = -1;
	    for (my $i = 0; $i <= $#$fields; ++$i) {
		$fn_index = $i and last 
		    if $$fields[$i] eq $f;
	    }
	    if (-1 == $fn_index) {
		push @$fields, $f;
		$fn_index = $#$fields;
	    }
	    $field_indexes{$f} = $fn_index;
	}
	$first_record = 0;
    }

    # traverse the data rows looking for records which are mentioned in catd
    my $rows = $$cat[2];
    foreach my $r (@$rows) {
	my $r_id = $$r[$id_index];
	if ($catd{$r_id}) {
	    my %c = %${$catd{$r_id}};
	    foreach my $f (keys %c) {
		my $ix = $field_indexes{$f};
		if ($ix) {
		    $$r[$ix] = $c{$f};
		}
	    }
	}
    }

    if ($catd_debug) {
	print CATDUMP Dumper \$cat;
	print CATDUMP "++++++++\n";
    }
}

