default namespace = "http://oracc.org/ns/esp/1.0"
namespace dc = "http://purl.org/dc/elements/1.1"
namespace dcterms = "http://purl.org/dc/terms/"
namespace esp = "http://oracc.org/ns/esp/1.0"
namespace xh = "http://www.w3.org/1999/xhtml"
namespace eb = "http://oracc.org/ns/esp-biblatex/1.0"

include "xhtml/rnc/xhtml-strict.rnc" {
  start = empty
  title = empty
}

start &= esp-page

Block.class |=  esp-block
Inline.class |= esp-inline

default-attr = 
	     attribute class { text }?,
	     attribute id { text }?

esp-block = 
  esp-accesskeys-listing | esp-site-map | esp-index-list | esp-author
  | esp-content-last-modified | esp-h | esp-sh | esp-image | esp-glossary-list
  | esp-techterms-list | esp-reading | esp-ref | eb-references

esp-inline = 
  esp-content-last-modified | esp-link | esp-twitter | esp-bookmark
  | esp-glossary | esp-index | esp-techterms | esp-email | esp-page-name
  | esp-page-title | eb-cite | eb-nocite

esp-accesskeys-listing = 
  element accesskeys-listing { default-attr, empty }?

esp-author = 
  element author  {
    default-attr,
    attribute first-names { text },
    attribute last-name { text }	
  }

esp-bookmark = 
  element bookmark { 
    attribute class { text }?,
    attribute id {text},
    attribute title {text}?,
    attribute hide-highlight { "yes" | "no" }?,
    Inline.model
  }*

esp-caption = 
  element caption { default-attr, Inline.model }

esp-content-last-modified = 
  element content-last-modified  { default-attr, empty }?

esp-email = 
  element email {
    default-attr,
    attribute address { text },
    empty
  }*

esp-flash-movie = 
  element flash-movie { 
    attribute class { text }?,
    attribute id { text },
    attribute file { text },
    attribute title { text },
    attribute width { text },
    attribute height { text },
    Inline.model
  }

esp-glossary = 
  element glossary {
    default-attr,
    attribute term { text},
    Inline.model
  }*

esp-glossary-list = 
  element glossary-list { 
    default-attr,
    element definition {
      default-attr,
      attribute term { text },
      Inline.model
    }*
  }?

esp-h = 
  element h { default-attr, Inline.model }*

esp-image = 
  element image {
    default-attr,
    (attribute file { text } | attribute url { xsd:anyURI }),
    attribute description { text }?,
    attribute height { text }?,
    attribute width { text }?,
    attribute position { "float" | "inline" }?,
    (
      (esp-link , esp-caption)
      | ( esp-caption? ,
          (esp-image-map | esp-link | esp-flash-movie)
        )
    )
  }

esp-image-map = 
  element image-map {
    default-attr,
    element area {
      default-attr,
      ( attribute page { text } | attribute url { text } ),
      attribute access-key { text }?,
      attribute coords { text },
      attribute description { text }?,
      attribute shape { text }, 
      attribute site-name { text }?,
      attribute title { text }
    }+
}

esp-index = 
  element index {
    default-attr,
    attribute term  { text },
    Inline.model
  }*

esp-index-list = 
  element index-list { default-attr, empty }?

esp-link = 
  element link {
    default-attr,
    ( 	 
      ( attribute page { text },  
        attribute bookmark { text }? 
      ) 
    | ( attribute url { text }, 
        attribute site-name { text }? , 
        attribute hide-print { "yes" | "no" }?
      )
    |   attribute bookmark { text }? 
    ),
    attribute onclick { text }?,
    attribute title { text }?,
    attribute accesskey { text }?,
    attribute rel { "external" }?,
    attribute type { "link" }?,
    Inline.model
  }*

esp-twitter = 
  element link {
    ( 	 
      ( attribute class { "twitter-timeline" }, 
        attribute dnt-data { text },
	attribute dnt-widget { text }
      ) 
    ),
    attribute id { text }?,
    attribute hide-print { "yes" | "no" }?,
    attribute title { text }?,
    attribute rel { "external" },
    Inline.model
  }

esp-page =
  element page {
    default-attr,
    element name { text },
    element title { text },
    html
  }

esp-page-name = 
  element page-name { 
    default-attr,
    attribute page { text },
    empty
  }*

esp-page-title = 
  element page-title  {
    default-attr,
    attribute page { text },
    empty
  }*

esp-reading = 
  element reading {
    default-attr,
    attribute referent { text },
    attribute page { text }?,
    empty
  }*

esp-ref = 
  element ref {
    default-attr,
    attribute referent { text },
    attribute page { text }?,
    empty
  }*

esp-site-map = 
  element site-map { default-attr, empty }?

esp-sh = 
  element sh {
    default-attr,
    Inline.model }*

esp-techterms = 
  element techterms {
    default-attr,
    attribute term { text },
    Inline.model
  }*

esp-techterms-list = 
  element techterms-list {
    default-attr,
    element termsdefinition { 
      default-attr,
      attribute term { text },
      Inline.model
    }*
  }?

eb-cite =
  element eb:cite {
    eb-cite-model
  }

eb-nocite =
  element eb:nocite {
    eb-cite-model
  }

eb-cite-model =
    attribute key { text },
    attribute pp { text }?,
    attribute star { "*" }?,
    text

eb-references =
  element eb:references { text }

