	    sleep(1);
	    my $sz = (stat($rtffile))[7];
#	    if (-z $rtffile) {
	    if (!$sz) {
		print "<p>No RTF output was produced ($rtffile)</p>";
		print `cat $rtffile`;
	    } else {
		my $dl_rtffile = $rtffile;
