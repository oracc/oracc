structure:
	  ALIGN
	| FIELD
	| FIELD FTYPE
	| lexfld
	| line
	;

lexfld:
	LF_HASH | LF_QUOTE | LF_STAR | LF_TILDE ;

line:
	  lineseg
        | SPACE
	| line lineseg
	;

lineseg:
	  words
	| LANG
	| comment
	;


line:
	lineparts
	| line lineparts
      	;

lineparts:
	cell
	| typedseg
	| plainseg
	;

cell:
	'&' anyseg
	;

anyseg:
	typedseg
	| plainseg
	;


typedseg:
	field plainseg
	;

field:
	FIELD
	| FIELD FTYPE
	| lexfld
	;

plainseg:
	SPACE
	| words
	| comment
	;
