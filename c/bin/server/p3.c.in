char *
p3tempdir(void)
{
  char *d = NULL, *tmpdir;
  tmpdir=getenv("TMPDIR");

  if (!tmpdir)
    {
      fprintf(stderr, "p3: no TMPDIR in environment; using /tmp\n");
      tmpdir = "/tmp";
    }
  d = malloc(strlen(tmpdir)+11);
  if (tmpdir[strlen(tmpdir)-1] == '/') 
    sprintf(d,"%s%s", tmpdir, "p3.XXXXXX");
  else
    sprintf(d,"%s/p3.XXXXXX", tmpdir);
  return mkdtemp(d);
}

